ex#3
stations = ["Малиновка", "Рябиновка", "Суслово", "Дрожжино", "Звягино"]
for ostanovka in stations:
    if ostanovka == stations [-1]:
        print(f'Поезд на станции: {ostanovka} Конченая!')
    else:
        print(f"Поезд на станции: {ostanovka}")
